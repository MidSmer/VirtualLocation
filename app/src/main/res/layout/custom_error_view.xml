<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/error_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/error_view_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_load_error"
        />

    <TextView
        android:id="@+id/error_view_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_view_img"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="@string/msg_error_view"
        android:textColor="#666666"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/error_retry_view"
        android:background="@drawable/blue_text_shape"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_below="@id/empty_view_img"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="@string/msg_error_retry"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"/>
</LinearLayout>